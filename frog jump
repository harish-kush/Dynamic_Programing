#include <bits/stdc++.h> 
int f(int idx , vector<int>& arr, vector<int>& dp){
    if(idx==0) return 0;
    if(dp[idx]!=-1) return dp[idx];
    int left = f(idx-1,arr,dp) + abs(arr[idx] - arr[idx-1]);
    int right = INT_MAX;
    if(idx>1) right = f(idx-2,arr,dp) + abs(arr[idx] - arr[idx-2]);
    return dp[idx]=min(left,right);
}
int frogJump(int n, vector<int> &arr)
{
    vector<int>dp(n,-1);
   return f(n-1,arr,dp);
}
